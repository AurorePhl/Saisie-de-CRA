@model CRA.Models.Assignment

@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    ViewData["Title"] = "Suppression Assignement";
}
<div class="text-center">

<h3>Êtes-vous sûr de vouloir supprimer cette mission ?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Code)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Code)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Libelle)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Libelle)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
    </dl>

    <form asp-action="Delete">
            <a class="btn btn-secondary" asp-action="Index" asp-route-id="@ViewData["AdminId"]">Annuler</a>
        <input type="submit" value="Oui, supprimer" class="btn btn-danger" asp-route-adminId="@ViewData["AdminId"]" /> 
    </form>
</div>
</div>
