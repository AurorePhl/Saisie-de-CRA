@model IEnumerable<CRA.DataAccess.SentTimeSlotViewModel>
@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    ViewData["Title"] = "Liste Assignements";
}
@{
    ViewData["Title"] = "Liste des TimeSlots";
}

<h1>@ViewData["Title"]</h1>

<form asp-action="Index" method="get">
    <div class="form-group">
        <input type="text" name="searchString" value="@ViewData["SearchString"]" class="form-control" placeholder="Rechercher par Username" />
        <input type="hidden" name="id" value="@ViewData["AdminId"]" />
        <button type="submit" class="btn btn-primary">Rechercher</button>
    </div>
</form>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Start)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.End)
            </th>
           
            <th>
                @Html.DisplayNameFor(model => model.Libelle)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Username)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.State)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            var rowClass = item.State switch
            {
                "VALIDATED" => "validated",
                "REJECTED" => "rejected",
                "SENT" => "sent",
                _ => ""
            };

            <tr class="@rowClass">
                <td>
                    @Html.DisplayFor(modelItem => item.Start)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.End)
                </td>
                
                <td>
                    @Html.DisplayFor(modelItem => item.Libelle)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Username)
                </td>
                <td>
                    @(item.State == "SENT" ? "RECEIVED" : item.State)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { idTimeSlot = item.Id, adminId = ViewData["AdminId"] }) |
                    @Html.ActionLink("Details", "Details", new { idTimeSlot = item.Id, adminId = ViewData["AdminId"] }) |
                    @Html.ActionLink("Delete", "Delete", new { idTimeSlot = item.Id, adminId = ViewData["AdminId"] })
                </td>
            </tr>
        }
    </tbody>
</table>

                    

