
@{
    Layout = "~/Views/Shared/_LayoutEmployee.cshtml";
    ViewData["Title"] = "Logout";
}

<div class="text-center">
    <h1>Déconnexion</h1>
<hr />
<div class="row">
    <div class="col-md-12">
        <form asp-action="Logout" method="post">
            
            <div class="form-group">
                <label class="control-label">Êtes-vous sûr de vouloir vous déconnecter ?</label>
            </div>
                <hr />
            <div class="form-group">
                    <input type="hidden" name="id" value="@ViewData["EmployeeId"]" />
                    <input type="submit" value="Non" class="btn btn-primary btn-danger" />
                <a asp-area="" asp-controller="" asp-action="Index" class="btn btn-success">Oui</a>
                
            </div>
        </form>
    </div>
</div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

