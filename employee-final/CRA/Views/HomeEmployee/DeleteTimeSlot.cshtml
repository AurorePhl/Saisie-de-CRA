@model CRA.Models.TimeSlot

@{
    Layout = "~/Views/Shared/_LayoutEmployee.cshtml";
    ViewData["Title"] = "Delete TimeSlot";
}

<form asp-action="DeleteTimeSlot" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" name="employeeId" value="@ViewData["EmployeeId"]" />
    <input type="hidden" name="code" value="@ViewData["AssignmentCode"]" />
    <input type="hidden" asp-for="Id" />

    <p>Êtes-vous sûr de vouloir supprimer ce créneau ?</p>
    <dl>
        <dt class="col-sm-2">
            Début
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Start)
        </dd>
        <dt class="col-sm-2">
            Fin
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.End)
        </dd>
    </dl>

    <button type="submit" class="btn btn-danger" asp-route-employeeId="@ViewData["EmployeeId"]" asp-route-code="@ViewData["AssignmentCode"]">Oui</button>
    <a asp-action="AssignmentDetails" asp-route-employeeId="@ViewData["EmployeeId"]" asp-route-code="@ViewData["AssignmentCode"]" class="btn btn-secondary">Annuler</a>
</form>
