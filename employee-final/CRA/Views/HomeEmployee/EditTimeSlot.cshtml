@model CRA.Models.TimeSlot

@{
    ViewData["Title"] = "EditTimeSlot";
}

<h1>Edition d'un créneau'</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="EditTimeSlot">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" name="employeeId" value="@ViewData["EmployeeId"]" />
            <input type="hidden" name="code" value="@ViewData["AssignmentCode"]" />
            <input type="hidden" asp-for="Id" value="@Model.Id"/>
            <div class="form-group">
                <label asp-for="Start" class="control-label">Début</label>
                <input asp-for="Start" class="form-control" />
                <span asp-validation-for="Start" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="End" class="control-label">Fin</label>
                <input asp-for="End" class="form-control" />
                <span asp-validation-for="End" class="text-danger"></span>
            </div>
            <div class="form-group">
                <a asp-action="AssignmentDetails" asp-route-employeeId="@ViewData["EmployeeId"]" asp-route-code="@ViewData["AssignmentCode"]" class="btn btn-secondary">Annuler</a>
                <input type="submit" value="Sauvegarder" class="btn btn-primary" asp-route-employeeId="@ViewData["EmployeeId"]" asp-route-code="@ViewData["AssignmentCode"]" />
            </div>
        </form>
    </div>
</div>

